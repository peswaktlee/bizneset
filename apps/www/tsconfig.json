{
    "extends": "../../tsconfig.json",
    "jsx": "preserve",
    "compilerOptions": {
        "baseUrl": ".",
        "plugins": [
            {
                "name": "next"
            }
        ],
        "target": "ES2017",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "downlevelIteration": true,
        "noEmit": true,
        "incremental": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "module": "esnext",
        "moduleResolution": "node",
        "isolatedModules": true,
        "jsx": "preserve",
        "typeRoots": [
            "../../ts",
            "node_modules/@types"
        ],
        "paths": {
            "~/*": [
                "../../*"
            ],
            "@/*": [
                "./*"
            ]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "next.config.mjs",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        ".next"
    ]
}